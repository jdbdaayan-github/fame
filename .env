# ------------------------------------------------------
# Application Settings
# ------------------------------------------------------
APP_NAME=Fame Framework
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost

# ------------------------------------------------------
# Database Settings
# ------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=fame_db
DB_USERNAME=root
DB_PASSWORD=

# ------------------------------------------------------
# Cache / Session
# ------------------------------------------------------
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ------------------------------------------------------
# Mail Settings (optional)
# ------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ------------------------------------------------------
# Logging
# ------------------------------------------------------
LOG_CHANNEL=stack
LOG_LEVEL=debug
