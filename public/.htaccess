<IfModule mod_rewrite.c>
    # Enable URL rewriting engine
    RewriteEngine On

    # ---------------------------------------------------------
    # If the request is pointing to an existing file, serve it
    # Example: /style.css or /image.png will load directly
    # ---------------------------------------------------------
    RewriteCond %{REQUEST_FILENAME} !-f

    # ---------------------------------------------------------
    # If the request is pointing to an existing directory, serve it
    # Example: /uploads/ will work as-is
    # ---------------------------------------------------------
    RewriteCond %{REQUEST_FILENAME} !-d

    # ---------------------------------------------------------
    # For all other requests, send them to index.php
    # This allows "pretty URLs" like /hello/world to be routed
    # by your PHP Fame Framework instead of direct files
    # ---------------------------------------------------------
    RewriteRule ^ index.php [L]
</IfModule>
